{
  "version": 2,
  "builds": [
    {
      "src": "src/api/api.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/painel/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/painel",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/src/api/api.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
